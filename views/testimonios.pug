extends ./layout.index

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}

        blockquote.text-center Experiencias de nuestros clientes
        include ./layout/bloque-testimonios

        .row 
            col.md-12
                h2.d-block.w-100.text.center Agrega tu testimonio

                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.error 
        
            row.justify-content-center
                col-md-8
                    form(action="/testimonios", method="POST") 
                        .form-group 
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="Tu nombre...", name="nombre", class="form-control", value= nombre) 

                        .form-group 
                            label(for="email") Correo Electr√≥nico
                            input#email(type="text", placeholder="Tu email...", name="email", class="form-control", value= email) 

                        .form-group 
                            label(for="mensaje") Nombre
                            textarea#mensaje(class="form-control", name="mensaje", placeholder="Tu mensaje...", rows= 3)= mensaje

                        input.btn.btn-success.btn-block(type="submit")